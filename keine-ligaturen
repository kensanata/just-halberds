#!/usr/bin/env perl
use Modern::Perl;
use open ':std', ':encoding(UTF-8)';
use utf8;

my $zwnj = "\x{200c}";

my @re = grep !/^#/, map { chomp; $_ } <DATA>;
for my $line (<STDIN>) {
  for my $re (@re) {
    $line =~ s/\b$re/$1$zwnj$2/gi;
  }
  print $line;
}

